<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiBrownianMotion"
             xmlns:viewmodel="clr-namespace:MauiBrownianMotion.ViewModels"
             x:Class="MauiBrownianMotion.MainPage"
             Title="Brownian Motion"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#181824}">

    <Grid RowDefinitions="*"
          ColumnDefinitions="2*,3*"
          Padding="32">
        <!-- Gráfico à esquerda -->
        <Border Grid.Column="0"
                BackgroundColor="#232336"
                Padding="0"
                VerticalOptions="Fill"
                HorizontalOptions="Fill">
            <GraphicsView x:Name="GraphicsView"
                          VerticalOptions="Fill"
                          HorizontalOptions="Fill"/>
        </Border>

        <!-- Controles à direita -->
        <ScrollView Grid.Column="1"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill">
            <VerticalStackLayout Padding="32,0"
                                 Spacing="18"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Fill">
                <Label Text="Preço inicial"
                       TextColor="White"/>
                <Entry Text="{Binding InitialPrice}"
                       Keyboard="Numeric"
                       BackgroundColor="#232336"
                       TextColor="White"
                       PlaceholderColor="#888"/>

                <Label Text="Volatilidade média(%)"
                       TextColor="White"/>
                <Entry Text="{Binding Volatility}"
                       Keyboard="Numeric"
                       BackgroundColor="#232336"
                       TextColor="White"
                       PlaceholderColor="#888"/>

                <Label Text="Retorno médio(%)"
                       TextColor="White"/>
                <Entry Text="{Binding Mean}"
                       Keyboard="Numeric"
                       BackgroundColor="#232336"
                       TextColor="White"
                       PlaceholderColor="#888"/>

                <Label Text="Tempo(dias)"
                       TextColor="White"/>
                <Entry Text="{Binding TimeDays}"
                       Keyboard="Numeric"
                       BackgroundColor="#232336"
                       TextColor="White"
                       PlaceholderColor="#888"/>

                <Button Text="Gerar simulação"
                        Command="{Binding GenerateSimulationCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        BackgroundColor="White"
                        TextColor="#232336"
                        FontAttributes="Bold"
                        Margin="0,24,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

